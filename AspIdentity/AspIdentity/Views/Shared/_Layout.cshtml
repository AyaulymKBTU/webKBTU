<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="background-color:lightgrey">

    <div class="col-md-3">
        <div class="row">
            <div class="container">
                <div class="sidebar-nav">
                    <div class="navbar navbar-light" role="navigation">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="navbar-collapse collapse sidebar-navbar-collapse">
                            <ul class="nav nav-pills nav-stacked" role="tablist" style="background-color:white">

                                <li style="border-style:ridge">@Html.ActionLink("USERS", "Users", "Projects", new { area = "" }, new { @style = "color:black" })</li>
                                <li style="border-style:ridge">@Html.ActionLink("PROJECTS", "Index", "Projects", new { area = "" }, new { @style = "color:black" })</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        @*<footer>
                <p>&copy; @DateTime.Now.Year - Task Manager</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
